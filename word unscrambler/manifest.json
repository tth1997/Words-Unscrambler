{

  "manifest_version": 2,
  "name": "Word Unscrambler",
  "version": "1.0",
  "description": "Enter any word and the app will return with a list of relevant words",

"page_action": {
  "browser_style": true,
  "default_icon": {
    "60": "icons/unscramble-60.png"
  },
"applications": {
  "gecko": {
    "id": "guessnum@example.com"
  }
},

"icons":{
	"60": "icons/unscramble-60.png"
},

"background":{
	"scripts": ["background.js"]
},

"browser_action":{
	"default_icon": "icons/unscramble-60.png",
	"default_title": "Word Unscrambler"
},

"permissions":[
	"activeTab",
	"clipboardWrite",
	"clipboardRead"
],

  "web_accessible_resources": [
  	"unscrambler/js/WordFinder.js",
  	"unscrambler/js/index.js",
  	"ScrabbleDict.js"
  ]

}
}